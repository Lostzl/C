/*Author - Lucas V.
Escreva um algoritmo que imprima todos os n√∫meros
pares entre 1 e 100, na ordem decrescente.*/

#include<stdio.h>
#include<stdlib.h>

main(){

int i, x = 0, j, c[99];

for(i = 0; i <= 99; i++){
    c[i] = i + 1;
}
for(j = 100; j > 0; j--){
    if((c[j - 1]%2) == 0){
        printf("- %d - e par!\n", c[j - 1]);
        x += 1;
    }
}
printf("\n");
system("pause");
}
