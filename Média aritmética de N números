/* Author - Lucas V.
Faça um algoritmo que calcule a
média aritmética de N números, onde a
quantidade N será entrada pelo usuário.*/

#include <stdio.h>
#include<stdlib.h>


int main(){

int qntNum, i;
float num, media, soma=0;


printf("Entre com a quantidade de termos:");
scanf("%d", &qntNum);

for(i = 0; i<qntNum; i++){

    printf("Entre com o %d - termo:", i+1);
    scanf("%f", &num);
    soma = soma + num;

}

media = soma/qntNum;
printf("A media entre os termos eh: %.2f", media);


printf("\n\n");
system("pause");
return 0;
}
