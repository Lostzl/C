#include<stdio.h>
#include<stdlib.h>

typedef struct elemento
{
    int val;
    struct elemento* prox;
} Elemento;

Elemento* Lista;

void imprime_lista(Elemento* lista);
Elemento* adiciona_elemento_inicio(Elemento* lista, int val);

int main()
{
    Elemento* lista;
    lista = NULL;

    lista = adiciona_elemento_inicio(lista, 1);
    lista = adiciona_elemento_inicio(lista, 2);
    lista = adiciona_elemento_inicio(lista, 3);

    imprime_lista(lista);


    system("pause");
    return 0;
}

void imprime_lista(Elemento* lista)
{
    Elemento* p;
    p = lista;

    if(p==NULL)
    {

        printf("\nNAO HA ELEMENTOS NA LISTA\n");
    }
    do
    {
        printf("\nVAL: %d\n\n", p->val);
        p = p->prox;

    }
    while(p != NULL);

}

Elemento* adiciona_elemento_inicio(Elemento* lista, int val)
{
    Elemento* novo = (Elemento*) malloc(sizeof(Elemento));

    if(lista == NULL)
    {
        novo->val = val;
        novo->prox = NULL;
        return novo;
    }
    else
    {
        novo->val = val;
        novo->prox=lista;


    }

}
